{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "models/*": ["models/*"],
      "store/*": ["store/*"],
      "api/*": ["api/*"],
      "components/*": ["components/*"],
      "config/*": ["config/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "pages/*": ["pages/*"],
      "providers/*": ["providers/*"]
    },
    "types": ["vite/client", "node"]
  }
}
